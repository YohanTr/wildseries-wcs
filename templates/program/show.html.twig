{% extends 'base.html.twig' %}
{% block title %}{{ program.title }}{% endblock %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
            {% for season in season %}
                <a href="{{ path('program_season_show', { programSlug : program.slug, seasonId : season.id}) }}"><button type="button" class="btn btn-secondary btn-sm">Season : {{ season.number }}</button></a>
            {% endfor %}
            <a href="{{ path('program_index') }}">
                <button type="button" class="btn btn-primary btn-sm"> Retour à la liste des programmes   </button>
            </a>
            <strong>Acteurs :</strong>
            <ul>
                {% for actor in program.actors %}
                    <a href="{{ path('actor_show', {id : actor.id}) }}"><li>{{ actor.name }} </li></a>
                {% else %}
                    <li>Aucun acteur pour cette série</li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}