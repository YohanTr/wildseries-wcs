{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ program.title }}</h1>
        <h2>Season {{ season.number }} ({{ season.year }})</h2>
    {% for episode in episode %}
        <div>
            <ul>
                <li><a href="{{ path("program_episode_show", { programId: program.id, seasonId: season.id, episodeId: episode.id }) }}">{{ episode.title }}</li></a>
                <p>{{ episode.synopsis }}</p>
            </ul>
        </div>
    {% endfor %}
{% endblock %}